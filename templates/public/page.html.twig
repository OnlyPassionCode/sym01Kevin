{% extends 'base.html.twig' %}

{% block title %}Hello PublicController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bievenue sur la page {{ page }}! ✅</h1>
    {% if page == 1 %}
        <p>Je suis le meilleur, la base ! Par défaut muahahahah 😋😊😉</p>
    {% elseif page == 2 %}
        <p>La page 2 c'est trop bien 😍</p>
    {% elseif page == 3 %}
        <p>Heheheheh boy je suis la page 3 😎</p>
    {% endif %}

    <a href="{{ path("homepage") }}">Accueil</a> 
    {% if page != 1 %}
    | 
    <a href="{{ path("page") }}">Page 1</a> 
    {% endif %}
    {% if page != 2 %}
    | 
    <a href="{{ path("page", {id: 2}) }}">Page 2</a> 
    {% endif %}
    {% if page != 3 %}
    | 
    <a href="{{ path("page", {id: 3}) }}">Page 3</a> 
    {% endif %}
    | 
    <a href="{{ path("contact") }}">Contact</a> 
</div>
{% endblock %}
